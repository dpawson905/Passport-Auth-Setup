extends ../layout

block content
  .hero
    .form-container
      form(action="/auth/register" method="POST").form
        .mb-2
          label(for="email") Email Address
          input.form-control(type="email" name="email" id="email" placeholder="Email Address" value=`${userInfo.email}` autofocus)
        .mb-2
          label(for="username") Username
          input.form-control(type="text" name="username" id="username" placeholder="Username" value=`${userInfo.username}`)
        .mb-2
          label(for="password") Password
          input.form-control(type="password" name="password" id="password" placeholder="Password")
        .mb-2
          label(for="password2") Confirm Password
          input.form-control(type="password" name="password2" id="password2" placeholder="Confirm Password")
          div
            small#checkPw
        .mb-4
          input(type="hidden", name="_csrf" value=`${csrfToken}`)
          a.float-left.btn.btn-outline-secondary(href="/auth/login") Have an account? Login
          button.btn.btn-primary.float-right(type="submit") Register
          
  include ../partials/_footer
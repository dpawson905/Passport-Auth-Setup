// Modal
#registerModal.modal.fade(tabindex='-1' aria-labelledby='registerModal' aria-hidden='true')
  .modal-dialog.modal-dialog-centered.modal-lg
    .modal-content
      form(action="/auth/register", method="post") 
        .modal-header
          h5#registerModal.modal-title.paragraph Register
          button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
        .modal-body
          .container 
            .row
              .col-lg-6.offset-lg-3
                .mb-3 
                  label.form-label.paragraph(for="email") Email 
                  input#email.form-control(type="email", name="email" placeholder="john@doe.com" required="")  
                .mb-3 
                  label.form-label.paragraph(for="username") Username 
                  input#username.form-control(type="text", name="username" placeholder="johndoe" required="")  
                .mb-3 
                  label.form-label.paragraph(for="phoneNumber") Phone Number 
                  input#phoneNumber.form-control(type="text", name="phoneNumber" placeholder="+1000-000-0000" required="")  
                .mb-3 
                  label.form-label.paragraph(for="password") Password 
                  input#password.form-control(type="password", name="password" required="")  
                .mb-3 
                  label.form-label.paragraph(for="password2") Confirm Password 
                  input#password2.form-control(type="password", name="password2" required="")
                  div#checkPw.paragraph 
        .modal-footer
          input(type="hidden", name="_csrf" value=`${csrfToken}`)
          button.btn.btn-outline-danger(type='button' data-bs-dismiss='modal') Cancel
          button.btn.btn-outline-primary(type='submit') Register
